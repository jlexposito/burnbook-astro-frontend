---
import Layout from "../layouts/BaseLayout.astro";

import TagFilters from "../components/TagFilter";
import RecipeGrid from "../components/RecipeGrid.jsx";

import { getRecipes, getTags } from "./../utils/api.js";
import { setRecipes, setTags } from "../recipeStore.js";

const recipes = await getRecipes();
setRecipes(recipes);

const tags = await getTags();
setTags(tags);


---

<Layout title="Burnbook">
    <RecipeGrid client:load />
    <TagFilters client:load />
</Layout>