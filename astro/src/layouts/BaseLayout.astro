---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="bg-theme-background">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" sizes="128x128" href="/favicon-128x128.png">
		<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="icon" type="image/ico" href="/favicon.ico">
		<link rel="icon" type="image/ico" href="/favicon.ico">
		<title>{title}</title>
	</head>
	<body class="">
		<div class="antialiased">
			<slot />
		</div>

	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background-color: #faf0dc;
		@apply pb-20 md:pb-10
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	.bk-accent {
    	@apply bg-secondary text-secondary-contrast active:bg-secondary-dark-ring active:ring-offset-2 focus:ring-secondary-dark-ring focus:ring-offset-2 focus-visible:outline focus-visible:outline-1
	}
	.bk-accent-hover {
		@apply hover:bg-secondary-dark hover:ring-1 hover:ring-secondary-contrast  
	}
</style>
