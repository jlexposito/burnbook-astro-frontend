---
import "@styles/global.css";

export interface Props {
	title: string;
	pagename: string;
}

const { 
	title,
	pagename
} = Astro.props;
const optimizeImages = import.meta.env.PUBLIC_OPTIMIZE_IMAGES || 0;

---

<!DOCTYPE html>
<html lang="es" class={"bg-theme-background " + pagename}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<link rel="icon" type="image/png" sizes="128x128" href="/favicon-128x128.png">
		<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<meta name="description" content="A collection of recipes we cook and love to share with other people.">
		{ optimizeImages == 1 && 
			<link rel="preconnect" href={import.meta.env.PUBLIC_IMAGE_BASE}>
			<link rel="dns-prefetch" href={import.meta.env.PUBLIC_IMAGE_BASE}>
		}
		<title>{title}</title>
	</head>
	<body class="">
		<div class="antialiased">
			<slot />
		</div>
	</body>
</html>

